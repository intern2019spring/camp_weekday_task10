<% if flash[:success] %>
  <div class="col-md-12">
    <div class="alert alert-success" role="alert">
      <%= flash[:success] %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>

  <div>
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>ZipCode</th>
          <th>PrefCode</th>
          <th>Address</th>
          <th>kana   </th>
          <th>introducation</th>
        </tr>
      </thead>
      <tbody>
      <% @areas.each do |area| %>
        <tr>
          <th><%= area.id %></th>
          <td><%= area.zipcode %></td>
          <td><%= area.prefcode %></td>
          <td><%= area.address1 %></td>
          <td><%= area.kana1 %></td>
          <td><%= area.introducation %></td>
        </tr>
      <% end %>
      </tbody>
  </div>
