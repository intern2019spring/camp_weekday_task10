

<%= form_with url: areas_search_path, method: :post, local: true  do |f| %>
  <div>
    <h3 class="text-center">エリア検索</h3>
      <div class="form-group">
        <%= f.label "郵便番号で検索" %>
        <p><%= f.text_field :zipcode, class:"form-control" %></p>
      </div>
    <%= f.submit "検索", class:"btn btn-primary btn-block" %>
  </div>
<% end %>
